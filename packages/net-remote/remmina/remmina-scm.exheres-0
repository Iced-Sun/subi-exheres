SCM_REPOSITORY="https://remmina.svn.sourceforge.net/svnroot/remmina"
SCM_SUBPATH="remmina"

require scm-svn remmina autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.10 1.11 ] ]

SLOT="0"
PLATFORMS="~amd64 ~x86"

DEPENDENCIES="
    build:
        dev-util/intltool[>=0.35.0]
"

src_prepare() {
    autotools_src_prepare
    edo intltoolize -c --automake --force
}

