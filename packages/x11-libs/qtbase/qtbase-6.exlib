qtbase-6_src_prepare() {
    cmake_src_prepare

    # Fix the names of some unprefixed executables
    edo sed -e "s:\(PKG_CONFIG.*=.\)\(pkg-config\):\1${PKG_CONFIG}:" \
            -i "${CMAKE_SOURCE}"/mkspecs/features/qt_functions.prf
}

